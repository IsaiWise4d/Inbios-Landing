---
const productLines = [
  {
    id: 1,
    title: 'TRAUMA',
    image: '/img/productos/trauma.png',
    description: 'Soluciones especializadas para el tratamiento de lesiones traumáticas con tecnología de vanguardia',
    link: '/productos/trauma',
    badge: 'Especializado'
  },
  {
    id: 2,
    title: 'CUIDADO DE HERIDAS',
    image: '/img/productos/cuidadoHeridas.png',
    description: 'Productos avanzados para el manejo integral y cicatrización efectiva de heridas',
    link: '/productos/heridas',
    badge: 'Innovación'
  },
  {
    id: 3,
    title: 'DISPOSITIVOS BIOREABSORBIBLES',
    image: '/img/productos/bioresorbibles.png',
    description: 'Tecnología de última generación en dispositivos que se integran naturalmente al organismo',
    link: '/productos/bioreabsorbibles',
    badge: 'Tecnología'
  }
];
---

<section class="relative py-20 md:py-32 bg-gradient-to-b from-black via-zinc-950 to-black overflow-hidden">
  <!-- Enhanced background with animated gradient mesh -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute top-20 left-10 w-96 h-96 bg-[#D4AF37] rounded-full blur-[120px] animate-pulse-slow"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-[#D4AF37] rounded-full blur-[120px] animate-pulse-slow" style="animation-delay: 2s"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-[#D4AF37] rounded-full blur-[150px] opacity-10"></div>
  </div>

  <!-- Grid pattern overlay for texture -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: radial-gradient(circle, #D4AF37 1px, transparent 1px); background-size: 50px 50px;"></div>

  <div class="container mx-auto px-6 md:px-8 lg:px-12 relative z-10">
    <!-- Improved section header with better typography hierarchy -->
    <div class="text-center mb-16 md:mb-20 space-y-6">
      <div class="inline-block animate-fade-in">
        <span class="inline-block px-4 py-2 bg-[#D4AF37]/10 border border-[#D4AF37]/30 rounded-full text-[#D4AF37] text-sm font-semibold tracking-wider uppercase mb-4">
          Nuestras Soluciones
        </span>
      </div>
      <h2 class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-white mb-6 animate-fade-in leading-tight" style="animation-delay: 100ms">
        Líneas de <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#D4AF37] via-[#F4D03F] to-[#D4AF37] animate-gradient">Productos</span>
      </h2>
      <p class="text-gray-400 text-lg md:text-xl max-w-3xl mx-auto leading-relaxed animate-fade-in" style="animation-delay: 200ms">
        Descubre nuestras líneas especializadas de productos biomédicos diseñados con la más alta tecnología
      </p>
      <div class="w-32 h-1 bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent mx-auto animate-fade-in" style="animation-delay: 300ms"></div>
    </div>

    <!-- Enhanced products grid with better card design -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10 mb-16">
      {productLines.map((product, index) => (
        <article 
          class="group relative bg-gradient-to-b from-zinc-900/80 to-zinc-950/80 backdrop-blur-xl rounded-3xl overflow-hidden border border-zinc-800/50 hover:border-[#D4AF37]/50 transition-all duration-700 hover:shadow-[0_0_50px_rgba(212,175,55,0.3)] animate-fade-in-up hover:-translate-y-2"
          style={`animation-delay: ${index * 150}ms`}
        >
          <!-- Badge overlay on image -->
          <div class="absolute top-6 right-6 z-20">
            <span class="inline-block px-4 py-2 bg-black/80 backdrop-blur-sm border border-[#D4AF37]/50 rounded-full text-[#D4AF37] text-xs font-bold tracking-wider uppercase shadow-lg">
              {product.badge}
            </span>
          </div>

          <!-- Enhanced image container with better overlay -->
          <div class="relative h-72 md:h-80 overflow-hidden">
            <img 
              src={product.image || "/placeholder.svg"}
              alt={product.title}
              class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110 group-hover:rotate-1"
            />
            <!-- Multi-layer gradient overlay for depth -->
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent opacity-90"></div>
            <div class="absolute inset-0 bg-gradient-to-br from-[#D4AF37]/0 via-transparent to-[#D4AF37]/10 opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
            
            <!-- Title with better positioning and animation -->
            <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8">
              <h3 class="text-2xl md:text-3xl font-bold text-white mb-2 transform transition-all duration-500 group-hover:translate-y-[-8px] group-hover:text-[#D4AF37] leading-tight">
                {product.title}
              </h3>
              <div class="w-0 h-1 bg-[#D4AF37] group-hover:w-20 transition-all duration-500"></div>
            </div>
          </div>

          <!-- Enhanced content section with better spacing -->
          <div class="p-6 md:p-8 space-y-6">
            <p class="text-gray-300 text-base leading-relaxed min-h-[4.5rem]">
              {product.description}
            </p>

            <!-- Improved CTA button with icon and better hover effect -->
            <a 
              href={product.link}
              class="group/btn inline-flex items-center gap-3 px-6 py-3 bg-transparent border-2 border-[#D4AF37]/30 text-[#D4AF37] font-semibold text-sm rounded-full hover:bg-[#D4AF37] hover:text-black hover:border-[#D4AF37] transition-all duration-300 hover:shadow-[0_0_30px_rgba(212,175,55,0.5)] hover:scale-105"
            >
              <span class="relative">Ver productos</span>
              <svg class="w-5 h-5 transition-transform duration-300 group-hover/btn:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </a>
          </div>

          <!-- Animated border glow effect on hover -->
          <div class="absolute inset-0 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none">
            <div class="absolute inset-0 rounded-3xl border-2 border-[#D4AF37]/20 animate-pulse-border"></div>
          </div>
        </article>
      ))}
    </div>


  </div>
</section>

<style>
  /* Enhanced animations with better easing */
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(40px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.15;
      transform: scale(1);
    }
    50% {
      opacity: 0.25;
      transform: scale(1.1);
    }
  }

  @keyframes pulse-border {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.6;
    }
  }

  @keyframes gradient {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  .animate-pulse-border {
    animation: pulse-border 2s ease-in-out infinite;
  }

  .animate-gradient {
    background-size: 200% 200%;
    animation: gradient 3s ease infinite;
  }

  /* Smooth transitions for all interactive elements */
  article {
    transform-origin: center;
  }

  article img {
    transform-origin: center;
  }
</style>
